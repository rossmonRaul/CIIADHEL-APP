<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CIIADHEL_CR.pages.AboutPage"
             BackgroundColor="white">
        <ContentPage.Content>
        <ScrollView>

            <StackLayout >
            <Frame BackgroundColor="White" HeightRequest="510" WidthRequest="350" CornerRadius="45" HasShadow="False" Margin="5" HorizontalOptions="Center" Padding="10">
                <Image Source="splash_logo.png" Aspect="AspectFill" Margin="0"/>
            </Frame>
            <Label Text="Aplicación desarrollada por IT ROSSMON" FontSize="Medium"
                   TextColor="Black"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" VerticalTextAlignment="Center"/>
            <Label Text="CIIADHEL 1.0.0 | 2022" FontSize="Large"
                   TextColor="Black"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>

        </ScrollView>
    </ContentPage.Content>

</ContentPage>